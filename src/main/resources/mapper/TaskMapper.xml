  <select id="queryTaskListWithPage" resultType="org.study.oals.model.vo.TaskVo">
    select * from t_task
    where 1 = 1
    <if test="state != null">
      AND state = #{state}
    </if>
    <if test="stateList.size() > 0">
      AND state IN
      <foreach item="item" index="index" collection="stateList" open="(" separator="," close=")">
        #{item}
      </foreach>
    </if>
  </select>
